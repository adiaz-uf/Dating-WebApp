# Docker Compose Configuration
DOCKER_COMPOSE=./docker-compose.yml
DATA_PATH=./data
POSTGRESQL_VOLUME_PATH=./data/mysql
UPLOADS_PATH=./uploads
BACKEND_NODE_MODULES=./Backend/node_modules
BACKEND_PACKAGE_LOCK=./Backend/package-lock.json
FRONTEND_NODE_MODULES=./frontend/node_modules
FRONTEND_PACKAGE_LOCK=./frontend/package-lock.json
TIMEZONE=Europe/Madrid

# Backend Configuration
APP_HOST_IP=http://localhost
APP_HOST_URL=http://localhost:3001
BACKEND_PORT=3001
FLASK_APP=run.py
FLASK_ENV=development
SECRET_KEY=your_super_secret_key_here
DATABASE_URL=postgresql://username:password@postgresql:5432/matcha

FRONTEND_PORT=5173

# For Python logging in Docker
PYTHONUNBUFFERED=1

# PostgreSQL Database
POSTGRESQL_DATABASE=matcha
POSTGRESQL_USER=your_db_user
POSTGRESQL_PASSWORD=your_db_password
POSTGRESQL_ROOT_PASSWORD=your_root_password
POSTGRESQL_HOST=postgresql
POSTGRESQL_PORT=5432

# Email Configuration (SMTP)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
MAIL_FROM_ADDRESS=no-reply@matcha.com
MAIL_FROM_NAME=Matcha
CONFIRM_ACCOUNT_LINK="/confirm-email?token="
RESET_PASSWORD_LINK="/new-pass?token="

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_AUTHORIZATION_BASE_URL="https://accounts.google.com/o/oauth2/auth"
GOOGLE_TOKEN_URL="https://oauth2.googleapis.com/token"
GOOGLE_USERINFO_URL="https://www.googleapis.com/oauth2/v2/userinfo"
GOOGLE_REDIRECT_URI="/oauth/google/callback"

# OAuth Security (for development only)
OAUTHLIB_INSECURE_TRANSPORT=1

# 42 Intra OAuth
INTRA42_CLIENT_ID=your_intra42_client_id
INTRA42_CLIENT_SECRET=your_intra42_client_secret
INTRA42_AUTHORIZATION_BASE_URL="https://api.intra.42.fr/oauth/authorize"
INTRA42_TOKEN_URL="https://api.intra.42.fr/oauth/token"
INTRA42_USERINFO_URL="https://api.intra.42.fr/v2/me"
INTRA42_REDIRECT_URI="/oauth/intra42/callback"
